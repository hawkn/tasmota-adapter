{
  "name": "tasmota-adapter",
  "display_name": "Tasmota",
  "version": "0.12.0",
  "description": "Connect your Tasmota devices",
  "main": "lib/index.js",
  "scripts": {
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "build": "tsc -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tim-hellhake/tasmota-adapter.git"
  },
  "author": "Tim Hellhake",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/tim-hellhake/tasmota-adapter/issues"
  },
  "homepage": "https://github.com/tim-hellhake/tasmota-adapter#readme",
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "manifest.json",
    "lib/api.js",
    "lib/ct-conversion.js",
    "lib/ct-conversion.spec.js",
    "lib/index.js",
    "lib/light.js",
    "lib/logger.js",
    "lib/power-plug.js",
    "lib/table-parser.js",
    "lib/table-parser.spec.js",
    "lib/tasmota-adapter.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "pollInterval": 1000
    },
    "schema": {
      "type": "object",
      "required": [
        "pollInterval"
      ],
      "properties": {
        "pollInterval": {
          "type": "integer",
          "title": "The number of milliseconds between two poll intervals"
        },
        "password": {
          "type": "string",
          "title": "The web admin password of your device (if set)"
        },
        "logging": {
          "type": "object",
          "title": "Log settings",
          "properties": {
            "debug": {
              "title": "Enable debug logs",
              "type": "boolean"
            }
          }
        },
        "experimental": {
          "type": "object",
          "title": "Experimental features",
          "properties": {
            "temperatureSensor": {
              "title": "Enable temperature sensor support",
              "type": "boolean"
            },
            "multiChannelRelay": {
              "title": "Enable support for multiple relay channels",
              "type": "boolean"
            },
            "useWhiteLedInColorMode": {
              "title": "Use white leds if all three color channels are equal",
              "type": "boolean"
            },
            "colorMode": {
              "title": "Add brightness, color temperature and color mode properties to RGB bulbs",
              "type": "boolean"
            }
          }
        },
        "devices": {
          "type": "array",
          "title": "List of device",
          "items": {
            "type": "object",
            "title": "A device",
            "required": [
              "hostname"
            ],
            "properties": {
              "id": {
                "type": "string",
                "title": "The ID of the device (will be generated for you)",
                "readOnly": true
              },
              "hostname": {
                "type": "string",
                "title": "The ip address or hostname of the device"
              },
              "port": {
                "type": "integer",
                "title": "The port of the web interface of the device (default is 80)"
              }
            }
          }
        }
      }
    }
  },
  "dependencies": {
    "dnssd": "^0.4.1",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/dnssd": "^0.4.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.2",
    "@types/node-fetch": "^2.5.5",
    "chai": "^4.2.0",
    "mocha": "^7.1.1",
    "ts-node": "^8.7.0",
    "typescript": "^3.8.3"
  }
}
